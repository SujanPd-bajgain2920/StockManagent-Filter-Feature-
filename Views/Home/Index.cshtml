@model IEnumerable<ProductEdit>

@{
    ViewData["Title"] = "Product List";
}

<style>
    .main-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin: 20px;
    }

    .main {
        flex: 1 1 300px;
    }
</style>

<div class="main-container">
    @foreach (var i in Model)
    {
        <div class="main flex">
            <div class="bg-white border-gray-200 w-full max-w-sm rounded-lg border shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="px-4 pt-4 flex justify-end">
                    <button id="dropdownButton" data-dropdown-toggle="dropdown-@i.ProId" class="text-gray-500 p-1.5 inline-block rounded-lg text-sm hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700" type="button">
                        <span class="sr-only">Open dropdown</span>
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 3">
                            <path d="M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z" />
                        </svg>
                    </button>

                    <div id="dropdown-@i.ProId" class="bg-white divide-gray-100 w-44 z-10 hidden list-none divide-y rounded-lg text-base shadow dark:bg-gray-700">
                        <ul class="py-2" aria-labelledby="dropdownButton">
                            <li>
                                <a asp-action="Edit" asp-controller="Home" asp-route-id="@i.ProId" class="px-4 py-2 text-gray-700 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Edit</a>
                            </li>
                            <li>
                                <a asp-action="Delete" asp-controller="Home" asp-route-id="@i.ProId" class="px-4 py-2 text-red-600 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Delete</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="pb-10 flex flex-col items-center">
                    <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="~/ProductImage/@i.ProImage" alt="@i.ProName image" />
                    <h5 class="mb-1 text-gray-900 text-xl font-medium dark:text-white">@i.ProName</h5>
                    <span class="text-gray-500 text-sm dark:text-gray-400">Rs:@i.ProPrice</span>
                    <span class="text-gray-500 text-sm dark:text-gray-400">Brand:@i.BrandName</span>
                    <div class="mt-4 flex md:mt-6">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@i.ProId" class="px-4 py-2 text-white bg-blue-700 inline-flex items-center rounded-lg text-center text-sm font-medium hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Details</a>
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>
